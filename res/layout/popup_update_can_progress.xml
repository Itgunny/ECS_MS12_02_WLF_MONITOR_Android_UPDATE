<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_custom_toast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_427x229" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_update_can_progress_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_update_can_progress_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_update_can_progress_top" >

        <TextView
            android:id="@+id/textView_popup_update_can_progress_program"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/Program"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <ProgressBar
            android:id="@+id/progressBar_popup_update_can_progress_program"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_popup_update_can_progress_program"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp" />
		
        <TextView
            android:id="@+id/textView_popup_update_can_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/progressBar_popup_update_can_progress_program"
            android:layout_alignRight="@+id/progressBar_popup_update_can_progress_program"
            android:layout_below="@+id/progressBar_popup_update_can_progress_program"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textView_popup_update_can_progress_status_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_popup_update_can_progress_program"
            android:layout_alignBottom="@+id/textView_popup_update_can_progress_program"
            android:layout_alignRight="@+id/progressBar_popup_update_can_progress_program"
            android:text="status"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_update_can_progress_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_update_can_progress_mid" >
        
        <ImageButton
            android:id="@+id/imageButton_popup_update_can_progress_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/_selector_popup_btn_159x62"
            android:src="@drawable/_selector_popup_btn_159x62" />
        
        <TextView
            android:id="@+id/textView_popup_update_can_progress_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageButton_popup_update_can_progress_exit"
            android:layout_alignLeft="@+id/imageButton_popup_update_can_progress_exit"
            android:layout_alignRight="@+id/imageButton_popup_update_can_progress_exit"
            android:layout_alignTop="@+id/imageButton_popup_update_can_progress_exit"
            android:gravity="center"
            android:text="@string/CANCEL"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>
    
    <TextView
            android:id="@+id/textView_popup_update_can_progress_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RelativeLayout_popup_update_can_progress_mid"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:text="Do not try to turn off the machine"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="#ffff0000"            
            android:gravity="center"
            android:textStyle="bold" />

</RelativeLayout>