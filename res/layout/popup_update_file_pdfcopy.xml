<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_custom_toast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_427x229"
    android:visibility="invisible" >

    <RelativeLayout
        android:id="@+id/RelativeLayout_popup_update_monitor_pdfcopy_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/textView_popup_update_monitor_pdfcopy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/USB_To_PDF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />
        </RelativeLayout>
     <RelativeLayout
        android:id="@+id/RelativeLayout_popup_update_monitor_pdfcopy_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_popup_update_monitor_pdfcopy_top" >   
        <TextView
            android:id="@+id/textView_popup_update_file_pdfcopy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="@string/USB_To_PDF_Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <ProgressBar
            android:id="@+id/progressBar_popup_update_file_pdfcopy_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_popup_update_file_pdfcopy_text"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />
        </RelativeLayout>
</RelativeLayout>
