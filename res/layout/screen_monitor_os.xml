<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imageView_screen_monitor_os_boot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/popup_btn_159x62"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/imageView_screen_monitor_os_kernel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_boot"
        android:layout_below="@+id/imageView_screen_monitor_os_boot"
        android:layout_marginTop="20dp"
        android:src="@drawable/popup_btn_159x62" />
    
    <ImageView
        android:id="@+id/imageView_screen_monitor_os_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_boot"
        android:layout_below="@+id/imageView_screen_monitor_os_kernel"
        android:layout_marginTop="20dp"
        android:src="@drawable/popup_btn_159x62" />
    
    <ImageView
        android:id="@+id/imageView_screen_monitor_os_ramdisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_boot"
        android:layout_below="@+id/imageView_screen_monitor_os_system"
        android:layout_marginTop="20dp"
        android:src="@drawable/popup_btn_159x62" />
    
    <TextView
        android:id="@+id/textView_screen_monitor_os_boot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_screen_monitor_os_boot"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_boot"
        android:layout_alignRight="@+id/imageView_screen_monitor_os_boot"
        android:layout_alignTop="@+id/imageView_screen_monitor_os_boot"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Boot"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/textView_screen_monitor_os_kernel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_screen_monitor_os_kernel"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_kernel"
        android:layout_alignRight="@+id/imageView_screen_monitor_os_kernel"
        android:layout_alignTop="@+id/imageView_screen_monitor_os_kernel"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Kernel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/textView_screen_monitor_os_system"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_screen_monitor_os_system"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_system"
        android:layout_alignRight="@+id/imageView_screen_monitor_os_system"
        android:layout_alignTop="@+id/imageView_screen_monitor_os_system"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="System"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp" />
    
    <TextView
        android:id="@+id/textView_screen_monitor_os_ramdisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_screen_monitor_os_ramdisk"
        android:layout_alignLeft="@+id/imageView_screen_monitor_os_ramdisk"
        android:layout_alignRight="@+id/imageView_screen_monitor_os_ramdisk"
        android:layout_alignTop="@+id/imageView_screen_monitor_os_ramdisk"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Ramdisk"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/button_screen_monitor_os_update"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Update"
        android:textSize="30sp" />

</RelativeLayout>
